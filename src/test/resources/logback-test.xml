<configuration>
  <appender userName="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <target>System.out</target>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M:%L - %m%n</pattern>
    </encoder>
  </appender>

  <!--<logger userName="org.springframework" level="WARN"/>-->

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>